<Window x:Class="AtlasEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas Engine" Height="768" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.514,-0.032" Width="1006" Grid.Column="0" Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem Header="_Select Image Files" Click="HandleMenuFileSelectClick" ToolTip="Select sprite image files to add to sheet."/>
            </MenuItem>
        </Menu>
        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Canvas x:Name="canvasControl" Background="Beige"/>
        </ScrollViewer>

    </Grid>
</Window>
