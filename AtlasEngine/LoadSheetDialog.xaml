<Window x:Class="AtlasEngine.LoadSheetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas Engine" Height="150" Width="300">
    <StackPanel Orientation="Vertical" x:Name="rootPanelControl">
        <Label HorizontalAlignment="Center">Enter New Sheet Data:</Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Width "></Label>
            <TextBox x:Name="width" Width="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>Height</Label>
            <TextBox x:Name="height" Width="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="_Ok" Click="Button_Click" Width="75"></Button>
            <Button Name="cancelButton" IsCancel="True" Width="75">Cancel</Button>
        </StackPanel>
        
    </StackPanel>
</Window>
